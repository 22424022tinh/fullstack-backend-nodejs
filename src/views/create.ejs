<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css" />
  <title>Home page</title>
</head>

<body>
  <div class="container">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a class="active" href="/create">Create user</a></li>

    </ul>
  </div>
  <div class="row">
    <div class="column left">
      <div class="form">
        <form action="/create-user" method="POST">
          <fieldset>
            <legend>Add new user:</legend>
            <label>Email:</label>
            <input type="email" id="emailID" name="email"><br><br>
            <label>Name:</label>
            <input type="text" id="nameID" name="name"><br><br>
            <label>City:</label>
            <input type="text" id="cityID" name="city"><br><br>
            <input type="submit" value="Submit" class="bnt_home_submit">
          </fieldset>
        </form>
      </div>
    </div>
    <div class="column right">
      <h2>List user</h2>
      <table style="width:100%">
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>City</th>
          <th>Active</th>
        </tr>
        
          <% listUsers.forEach(function(user) { %>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= user.email %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= user.city %>
              </td>
              <td width="30%">
                <a href="/update/<%= user.id %>">Edit</a>
                <button>Delete</button>
              </td>
            </tr>
         <% }); %> 
      </table>
    </div>
  </div>


</body>

</html>